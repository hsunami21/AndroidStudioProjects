<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Home">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivCategory"
        android:src="@drawable/category"
        android:layout_centerVertical="true"
        android:layout_marginLeft="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Categories"
        android:id="@+id/tvCategory"
        android:layout_below="@+id/ivCategory"
        android:layout_marginLeft="25dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPreference"
        android:src="@drawable/preference"
        android:layout_centerVertical="true"
        android:layout_marginLeft="200dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Preferences"
        android:id="@+id/tvPreference"
        android:layout_below="@+id/ivPreference"
        android:layout_marginLeft="195dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logoImage"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/ivCategory"
        android:layout_alignLeft="@+id/ivCategory"
        android:layout_alignStart="@+id/ivCategory"
        android:layout_alignRight="@+id/tvPreference"
        android:layout_alignEnd="@+id/tvPreference" />

</RelativeLayout>
